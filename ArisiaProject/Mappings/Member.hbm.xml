<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="ArisiaProject.Domain" assembly="ArisiaProject">

  <!-- Mapping for Customer class -->
  <class name="Member" table="MEMBER" lazy="false">

    <!-- Identity mapping -->
    <id name="Id">
      <column name="MEMBER_ID" />
      <!-- Autogenerated Id-->
      <generator class="guid" />
    </id>

    <!-- Simple Mapping -->
    <property name="Name" />
    <property name="BirthOfDate">
      <column name="BIRTH_OF_DATE" />
    </property>
    <property name="Grade" />

    <!-- Component Mapping : Address -->
    <component name="Address">
      <property name="StreetAddress">
        <column name="STREET_ADDRESS" />
      </property>
      <property name="State" />
      <property name="PostCode">
        <column name="POST_CODE" />
      </property>
    </component>

  </class>

</hibernate-mapping>